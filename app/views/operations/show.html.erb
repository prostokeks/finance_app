<article class="px-4 py-8 mx-auto max-w-7xl">
  <div class="grid md:grid-cols-2 md:gap-6">
    <div class="w-full mx-auto prose md:w-3/4 lg:w-1/2 text-white text-xl">
      Категорія: <%= Category.find(@operation.category_id).name %>
    </div>
    <div class="w-full mx-auto prose md:w-3/4 lg:w-1/2 text-white text-xl">
      Тип операції: <%= @operation.type_operation %>
    </div>
  </div>

  <div class="grid md:grid-cols-2 md:gap-6 mt-20">
    <div class="w-full mx-auto prose md:w-3/4 lg:w-1/2 text-white text-xl">
      Сума: <%= @operation.amount %> UAH
    </div>
    <div class="w-full mx-auto prose md:w-3/4 lg:w-1/2 text-white text-xl">
      Дата: <%= @operation.odate.strftime("%Y-%m-%d") %>
    </div>
  </div>

  <div class="grid md:grid-cols-2 md:gap-6 mt-20">
    <div class="w-full mx-auto prose md:w-3/4 lg:w-1/2 text-white text-xl">
      Опис: <%= @operation.description %>
    </div>
    <div class="w-full mx-auto prose md:w-3/4 lg:w-1/2 text-white text-xl">
    </div>
  </div>

  <div class="w-full mx-auto prose md:w-3/4 lg:w-1/2 pt-8">
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 sm:grid-cols-2">
      <% if @operation.images.attached? %>
        <% @operation.images.each do |img| %>
          <p><%= image_tag img, class: "w-52 h-52 rounded-lg" %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</article>

<div class="flex items-center space-x-2 overflow-x-auto overflow-y-hidden justify-center flex-nowrap dark:text-gray-100">
  <div class="actions px-8 pt-12 mb-4"><%= link_to "Повернутися", :back , class: "px-8 py-2 font-semibold border rounded border-white text-white cursor-pointer hover:border-blue-500 hover:text-blue-500" %></div>
</div>