<%= render 'static_pages/errors', object: @operation %>

<div class="w-full max-w-lg mx-auto mt-10">
  <h1 class=" font-bold leading-none text-center text-2xl mb-10 text-gray-100">Реєстрація / Редагування інформації про транзакції</h1>
</div>

<div class="w-full max-w-lg mx-auto mt-12 p-6 rounded-md bg-gray-900">

  <%= form_with model: @operation do |operation| %>

    <div class="grid md:grid-cols-2 md:gap-6">
      <div class="relative z-0 mb-6 w-full group">
        <%= operation.label "Тип операції", class: "block mb-2 text-sm font-medium text-gray-300" %>
        <%= operation.select :type_operation, Operation::STATUS %>
      </div>
      <div class="relative z-0 mb-6 w-full group">
        <%= operation.label "Категорія", class: "block mb-2 text-sm font-medium text-gray-300" %>
        <%= operation.collection_select(:category_id, Category.where(user_id: User.where(workgroup: "admin")).or(Category.where(user_id: current_user.id)), :id, :name) %>
      </div>
    </div>

    <div class="mb-6">
      <%= operation.label "Фото", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= operation.file_field :images, multiple:true, class: "form-control shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
    </div>

    <div class="mb-6">
      <%= operation.label "Дата", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= operation.date_field :odate, class: "form-control shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
    </div>

    <div class="mb-6">
      <%= operation.label "Сума", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= operation.text_field :amount, class: "form-control shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light", placeholder: "100" %>
    </div>

    <div class="mb-6">
      <%= operation.label "Опис", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= operation.text_area :description, class: "form-control shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light", placeholder: "Витрати на обід, сніданки в закладах громадського харчування" %>
    </div>

    <div class="mt-10 flex items-center space-x-2 overflow-x-auto overflow-y-hidden justify-center flex-nowrap dark:text-gray-100">
      <div class="actions px-8 pt-4 mb-4"><%= operation.submit "Зберегти", class: "px-8 py-2 font-semibold border rounded border-white text-white cursor-pointer hover:border-blue-500 hover:text-blue-500" %></div>
      <div class="actions px-8 pt-4 mb-4"><%= link_to "Повернутися", :back, class: "px-8 py-2 font-semibold border rounded border-white text-white cursor-pointer hover:border-blue-500 hover:text-blue-500" %></div>
    </div>
  <% end %>

</div>