<div class="mt-20 flex justify-center">
  <div class="flex flex-col max-w-md p-6 rounded-md sm:p-10 bg-gray-900 text-gray-100">
    <div class="mb-8 text-center">
      <h1 class="my-3 text-4xl font-bold">Зареєструватися</h1>
      <p class="text-sm text-gray-400">Зареєструйтеся, щоб отримати доступ до свого облікового запису</p>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-12 ng-untouched ng-pristine ng-valid") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="space-y-4">

        <div class="field">
          <%= f.label "Пошта", class: "block mb-2 text-sm" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-md border-gray-700 bg-gray-900 text-gray-100", placeholder: "dosi@gmail.com" %>
        </div>

        <div class="field">
          <%= f.label "Пароль", class: "block text-sm" %>
          <% if @minimum_password_length %>
            <em class="text-gray-400 text-xs mb-1">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-md border-gray-700 bg-gray-900 text-gray-100", placeholder: "******" %>
        </div>

        <div class="field">
          <%= f.label "Підтвердження паролю", class: "block mb-2 text-sm" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-md border-gray-700 bg-gray-900 text-gray-100", placeholder: "******" %>
        </div>

        <div class="space-y-2">
          <div class="actions">
            <%= f.submit "Зареєструватися", class: "w-full px-8 py-3 font-semibold border rounded-md border-white text-white cursor-pointer hover:border-blue-500 hover:text-blue-500" %>
          </div>
          <p class="px-6 text-sm text-center text-gray-400">Ще не маєте облікового запису?
            <%= link_to "Авторизуватися", new_user_session_path, class: "hover:underline text-blue-500" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>